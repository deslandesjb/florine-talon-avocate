<style>
	.faq-question .plus {
		fill: #669888;
	}
	.faq-question .plus .vertical-line {
		transform-origin: 50% 50%;
		transition: transform 0.3s ease-out;
	}
	.faq-question.clicked .plus .vertical-line {
		transform: rotate(270deg);
	}
	.faq-answers {
		max-height: 0;
		overflow: hidden;
		transition: max-height 0.3s ease-out;
	}
</style>
<script>
	document.addEventListener("DOMContentLoaded", function () {
		let e = document.getElementsByClassName("faq-question"),
			t = document.getElementsByClassName("faq-answers");

		// Ouvre le premier élément par défaut
		if (e.length > 0) {
			e[0].classList.add("clicked");
			t[0].style.maxHeight = t[0].scrollHeight + "px";
		}

		for (let s = 0; s < e.length; s++) {
			e[s].addEventListener("click", function () {
				var l = this.nextElementSibling;
				l.style.maxHeight ? ((l.style.maxHeight = null), e[s].classList.remove("clicked")) : (e[s].classList.add("clicked"), (l.style.maxHeight = l.scrollHeight + "px"));

				for (let l = 0; l < e.length; l++) {
					if (l != s && e[l].className.includes("clicked")) {
						t[l].style.maxHeight = null;
						e[l].classList.remove("clicked");
					}
				}
			});
		}
	});
</script>
