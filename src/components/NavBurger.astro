---
import { Image } from "astro:assets";
---

<style>
	.navbar {
		transition: ease 0.3s;
	}
	.hamburger-header {
		/* margin-right: 20px; */
		position: relative;
		display: -webkit-box;
		display: -ms-flexbox;
		display: flex;
		width: 30px;
		height: 23px;
		-ms-flex-line-pack: justify;
		align-content: space-between;
		-ms-flex-wrap: wrap;
		flex-wrap: wrap;
		cursor: pointer;
	}
	.hamburger-header span {
		display: inline-block;
		width: 100%;
		height: 2px;
		-webkit-transition: all 0.4s ease-in-out;
		transition: all 0.4s ease-in-out;
		background-color: #161616;
	}
	.hamburger-header span:nth-of-type(3) {
		width: 50%;
	}
	/* .hamburger-header:hover span:nth-of-type(3) {
		width: 100%;
	} */
	/* #nav-check:not(:checked) ~ .nav-links {
		transform: translateX(100%);
	} */
	#nav-check:checked ~ .nav-links {
		transform: translateX(0);
		visibility: visible;
	}
	#nav-check:checked ~ div .hamburger-header span:nth-of-type(3) {
		width: 100%;
	}

	.nav-links {
		transform: translateX(100%);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		transition: transform 0.3s ease-in;
		transition:
			transform 0.4s cubic-bezier(0.4, 0, 0.2, 1) 0.2s,
			-webkit-transform 0.4s cubic-bezier(0.4, 0, 0.2, 1) 0.2s;
		height: calc(100vh + 100px);
		height: calc(100dvh + 100px);
		top: 0;
		z-index: -10;
	}
	@media (min-width: 768px) {
		.nav-links {
			display: flex;
			flex-direction: row;
			height: auto !important;
			position: unset !important;
			width: auto;
			transform: none !important;
			z-index: 0;
		}
	}
</style>
